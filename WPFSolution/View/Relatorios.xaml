<Window x:Class="WPFSolution.Relatorios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSolution"
        mc:Ignorable="d"
        Title="Relatorios" Height="350" Width="525">
    <Grid>
        <Label x:Name="labelRelatorios" Content="Relatórios" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="18"/>
        <DataGrid x:Name="dataGridDoador" HorizontalAlignment="Left" Height="212" Margin="10,75,0,0" VerticalAlignment="Top" Width="226"/>
        <DataGrid x:Name="dataGridOng" HorizontalAlignment="Left" Height="212" Margin="270,75,0,0" VerticalAlignment="Top" Width="215"/>
        <Label x:Name="labelRelatorioDoador" Content="Ranking de livros doados" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.211,-0.346"/>
        <Label x:Name="labelRelatorioONG" Content="Ranking de livros recebidos" HorizontalAlignment="Left" Margin="270,49,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonVoltarRelatorios" Content="Voltar" HorizontalAlignment="Left" Margin="216,292,0,0" VerticalAlignment="Top" Width="75" Click="buttonVoltarRelatorios_Click"/>

    </Grid>
</Window>
